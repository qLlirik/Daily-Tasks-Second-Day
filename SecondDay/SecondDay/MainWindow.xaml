<Window x:Class="SecondDay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondDay"
        mc:Ignorable="d"
        Title="Балтика" Height="350" Width="525" MinHeight="350" MinWidth="525" FontSize="16" Background="LightGreen" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="click_AddOrder" Content="Добавить груз" Width="250" Height="40" Margin="10"/>
            <Button Click="click_JoinOrdersAndParties" Content="Объеденить грузы в партии" Width="250" Height="40" Margin="10"/>
            <Button Click="click_AddRoute" Content="Построить маршрут" Width="250" Height="40" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
